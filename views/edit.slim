    input type="text" name="name" value="#{@special_todo["name"]}"
    input type="text" name="description" value="#{@special_todo["description"]}"
    select name="category_name"
        -@data_categories.each do |category|
            -if category["id"] == @special_todo["id_category"]
                option value="#{category["id"]}" selected="selected" = category["category_name"]
